# Django 设置
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库设置
DB_NAME=usercenter
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# Redis 设置
REDIS_URL=redis://redis:6379/0

# 邮件设置
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=user@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=UserCenter <noreply@example.com>

# 语言和时区设置
LANGUAGE_CODE=zh-hans
TIME_ZONE=Asia/Shanghai

# 其他设置
STATIC_URL=/static/
MEDIA_URL=/media/

# Docker 设置
APP_PORT=8000  # 应用端口，可以根据需要更改

# Docker 设置
NGINX_PORT=8080  # 可以根据需要更改端口 

# 微信登录配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 苹果登录配置
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=/path/to/your/private/key.p8
# 或者直接提供私钥内容
APPLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----
APPLE_REDIRECT_URI=https://your-app.example.com/callback